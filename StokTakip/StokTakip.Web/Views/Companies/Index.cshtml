@model List<Company>

@{
    ViewData["Title"] = "Firmalar";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>🏢 Firma Listesi</h2>
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalCreate">
        + Yeni Firma Ekle
    </button>
</div>

<table class="table table-striped table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>#</th>
            <th>Firma Adı</th>
            <th>Şehir</th>
            <th>Vergi No</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.City</td>
                <td>@item.TaxNumber</td>
                <td>
                    <button class="btn btn-warning btn-sm btn-edit"
                            data-id="@item.Id"
                            data-name="@item.Name"
                            data-city="@item.City"
                            data-tax="@item.TaxNumber"
                            data-bs-toggle="modal" data-bs-target="#modalUpdate">
                        Düzenle
                    </button>
                    <a href="/Companies/Delete/@item.Id" class="btn btn-danger btn-sm" onclick="return confirm('Silmek istediğine emin misin?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="modal fade" id="modalCreate" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Yeni Firma</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Companies/Create" method="post">
                <div class="modal-body">
                    <label>Firma Adı</label>
                    <input type="text" name="Name" class="form-control mb-2" required />
                    <label>Şehir</label>
                    <input type="text" name="City" class="form-control mb-2" required />
                    <label>Vergi No</label>
                    <input type="text" name="TaxNumber" class="form-control" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Kaydet</button>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="modal fade" id="modalUpdate" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-warning">
                <h5 class="modal-title">Firmayı Düzenle</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form action="/Companies/Update" method="post">
                <div class="modal-body">
                    <input type="hidden" name="Id" id="editId" />

                    <label>Firma Adı</label>
                    <input type="text" name="Name" id="editName" class="form-control mb-2" required />
                    <label>Şehir</label>
                    <input type="text" name="City" id="editCity" class="form-control mb-2" required />
                    <label>Vergi No</label>
                    <input type="text" name="TaxNumber" id="editTax" class="form-control" />
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>

        // Düzenle butonuna tıklanınca verileri Modal'a doldur
        $('.btn-edit').click(function () {
            var id = $(this).data('id');
            var name = $(this).data('name');
            var city = $(this).data('city');
            var tax = $(this).data('tax');

            $('#editId').val(id);
            $('#editName').val(name);
            $('#editCity').val(city);
            $('#editTax').val(tax);
        });
    </script>
}